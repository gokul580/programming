#include <stdio.h>
#include <string.h>

int main()
{
    char str[100],flag=0,i,len;
    printf("enter a string:");
    scanf("%s",&str);
    len = strlen(str);
    for(i=0;i<len;i++){
        if(str[i] != str[len-i-1]){
            flag=1;
            break;
        }}
        if(flag){
            printf("the given string is not a palindrome");
        }else{
            printf("the given string is  a palindrome ");
        }
    
    return 0;
}
