#include <stdio.h>

int main() {
    int arr[8],i,j,temp;
    printf("enter the array elements:");
    for(j=0;j<8;j++)
    scanf("%d",&arr[j]);
    for(j=0;j<8;j++){
        for(i=0;i<8/2-j;i++){
            if(arr[i]>arr[i+1]){
                temp=arr[i];
                arr[i]=arr[i+1];
                arr[i+1]=temp;
        }
    }}
    for(j=8/2;j<8;j++){
        for(i=8/2;i<8-(j-4);i++){
            if(arr[i]>arr[i+1]){
                temp=arr[i];
                arr[i]=arr[i+1];
                arr[i+1]=temp;
        }
    }}
    
    
    
    
    
    printf("the sorted array is:");
    for(j=0;j<8;j++){
        printf(" %d",arr[j]);
    }
    return 0;
}
